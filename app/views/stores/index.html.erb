<% if @active_stores.empty? %>
    <h4>There are no active stores in the system at this time.</h4>
<% else %>
    <h4>Active Stores owned by Cafe23</h4>
    <table class="striped highlight">
        <thead>
            <th>Name</th>
            <th>Current Assignments</th>
            <th>Phone</th>
        </thead>
        <tbody>
            <% @active_stores.each do |store| %>
            <tr>
                <td><%= link_to(store.name, store_path(store)) %></td>
                <td><%= store.assignments.count %></td>
                <td><%= store.phone.gsub(/(\d{3})(\d{3})(\d{4})/, '\1-\2-\3') %></td>
            </tr>
            <% end %>
        </tbody>
    </table>

    <br/><br/>
    <h4>Inactive Stores owned by Cafe23</h4>
    <table class="striped highlight">
        <thead>
            <th>Name</th>
        </thead>
        <tbody>
            <% @inactive_stores.each do |store| %>
            <tr>
                <td><%= link_to(store.name, store_path(store)) %></td>
                <td><%= store.phone.gsub(/(\d{3})(\d{3})(\d{4})/, '\1-\2-\3') %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
    <br />
<% end %>

<br/><br/>
<h4>Get Store Payroll</h4>
<button><%= link_to "Calculate Store Payroll", store_form_path %></button>
