<div class="card">
  <div class="card-content">
    <h5>Employee Information for <%= @employee.name %></h5><br />

    <b>Name:&nbsp;&nbsp;</b>
      <%= "#{@employee.last_name}, #{@employee.first_name}" %><br /><br />

    <b>SSN:&nbsp;&nbsp;</b>
      <%= @employee.ssn %><br /><br />

    <b>Date of Birth:&nbsp;&nbsp;</b>
      <%= @employee.date_of_birth.strftime("%B %d, %Y") %><br /><br />

    <b>Phone:&nbsp;&nbsp;</b>
      <%= @employee.phone %><br /><br />

    <b>Role:&nbsp;&nbsp;</b>
      <%= @employee.role %><br /><br />

    <b>Username:&nbsp;&nbsp;</b>
      <%= @employee.username %><br /><br />
    
     <b>Active with Cafe23?&nbsp;&nbsp;</b>
      <%= @employee.active ? "Yes" : "No" %><br><br><br>
  </div>
</div>
<button>
    <%= link_to "CREATE ASSIGNMENT", new_assignment_path %>
</button>
<button>
    <%= link_to "CREATE SHIFT", new_shift_path %>
</button>