<% if @current_assignments.empty? %>
  <h4>There are no current assignments in the system at this time.</h4>
<% else %>
  <h4>Current Assignments</h4>
  <table class="striped highlight">
    <thead>
      <tr>
        <th>Start Date</th>
        <th>Store</th>
        <th>Employee</th>
        <th>Pay Grade</th>
        <th>Shift Count</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @current_assignments.each do |assignment| %>
        <tr>
          <td><%= assignment.start_date.strftime('%m/%d/%y') %></td>
          <td><%= assignment.store.name %></td>
          <td><%= link_to("#{assignment.employee.first_name} #{assignment.employee.last_name}", employee_path(assignment.employee)) %></td>
          <td><%= assignment.pay_grade.level %></td>
          <td><%= assignment.shifts.count %></td>
          <td> <%= link_to edit_assignment_path(assignment) do %>
                <i class="material-icons">edit</i>
               <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<br/><br/>
<h4>Add New Assignment</h4>
