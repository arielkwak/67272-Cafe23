<div class="row">
  <div class="col s8">
    <%= simple_form_for(@shift_job) do |f| %>
      <%= f.error_notification %>
      <div class="row">
        <p><h6><em>&nbsp;&nbsp;&nbsp;Select job to add</em></h6></p>

        <div class="form-inputs">
          <%= f.input :shift_id, as: :hidden, input_html: { value: @shift.id } %>
          <%= f.input :job_id, collection: Job.alphabetical.active.to_a %>
        </div>
      </div>
      <div class="row">
        <div class="form-actions col s8">
          <%= f.button :submit %>
        </div>
      </div>
    <% end %> 
  </div>
</div>
