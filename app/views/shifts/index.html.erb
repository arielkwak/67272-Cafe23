<% unless @upcoming_shifts.nil? %>
  <h4>Upcoming Shifts</h4>
  <table class="striped highlight">
    <thead>
      <tr>
        <th>Store</th>
        <th>Pay Grade</th>
        <th>Date</th>
        <th>Start Time</th>
        <th>End Time</th>
      </tr> 
    </thead>
    <tbody>
      <% unless @ucomping_shifts.nil? %>
        <% @upcoming_shifts.each do |shift| %>
          <tr>
            <td><%= link_to shift.assignment.store.name, store_path(shift.assignment.store) %></td>
            <td><%= link_to shift.assignment.pay_grade.level, assignment_path(shift.assignment) %></td>
            <td><%= shift.date.strftime('%A, %B %d, %Y') %></td>
            <td><%= shift.start_time.strftime('%I:%M %p') %></td>
            <td><%= shift.end_time.strftime('%I:%M %p') %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <br/><br/>
<% else %>
  <h4>You currently have no upcoming shifts.</h4>
<% end %>

<% unless @completed_shifts.nil? %>
  <h4>Completed Shifts</h4>
  <table class="striped highlight">
    <thead>
      <tr>
        <th>Store</th>
        <th>Pay Grade</th>
        <th>Date</th>
        <th>Start Time</th>
        <th>End Time</th>
        <th>Notes</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @completed_shifts.each do |shift| %>
        <tr>
          <td><%= link_to shift.assignment.store.name, store_path(shift.assignment.store) %></td>
          <td><%= link_to shift.assignment.pay_grade.level, assignment_path(shift.assignment) %></td>
          <td><%= shift.date.strftime('%A, %B %d, %Y') %></td>
          <td><%= shift.start_time.strftime('%I:%M %p') %></td>
          <td><%= shift.end_time.strftime('%I:%M %p') %></td>
          <td><%= shift.notes %></td>
          <td><%= link_to shift_path(shift) do %>
              <i class="material-icons">visibility</i>
          <% end %></td> 
        </tr>
      <% end %> 
    </tbody>
  </table>
<% else %>
  <h4>You currently have no completed shifts.</h4>
<% end %>

<br/><br/>
<h4>Add New Shift</h4>
<%= link_to "New Shift", new_shift_path %>

