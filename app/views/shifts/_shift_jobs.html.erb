<% unless @jobs.nil? %>
  <div class="card">
    <div class="card-content">
      <span class="card-title">Job History</span>
      <table class="striped highlight">
        <thead>
          <th>Job</th>
        </thead>
        <% for job in @jobs %>
          <tr>
            <td><%= job.job.name %></td>
          </tr>
        <% end %>
      </table>
    </div>
    <% if can? :new, ShiftJob %>
      <div class="card-action">
        <%= link_to "Add a new job", new_shift_job_path(shift_id: @shift.id) %>
      </div>
    <% end %>
  </div>
<% else %>
  <% if can? :new, ShiftJob %>
    <div class="card grey lighten-3">
      <div class="card-action">
        <%= link_to "Add a new job", new_shift_job_path(shift_id: @shift.id) %>
      </div>
    </div>
  <% end %>
<% end %>